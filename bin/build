#!/usr/bin/env bash

set -e

REPO_ROOT="$(dirname $(dirname $(realpath ${BASH_SOURCE[0]:-${(%):-%x}})))"

echo "$PACKER_TEMPLATE"
echo "$PACKER_VARS_FILES"

while IFS= read -r FILE; do
  echo "$FILE";
done <<< "$PACKER_VARS_FILES"

exit 1

#Â PACKER_LOG=1 packer build --on-error=cleanup "$REPO_ROOT/packer/$PACKER_TEMPLATE.pkr.hcl"
