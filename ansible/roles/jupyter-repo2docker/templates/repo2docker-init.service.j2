[Unit]
Description=
Wants=network.target
After=network-online.target
ConditionPathExists=!{{ repo2docker_root }}/service.init.done

[Service]
Type=oneshot
RemainAfterExit=true
ExecStart=/usr/local/bin/repo2docker-init
ExecStartPost=touch {{ repo2docker_root }}/service.init.done

[Install]
WantedBy=multi-user.target default.target
